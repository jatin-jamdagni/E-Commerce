{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ], // This should cover it
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts"
  ]
}
